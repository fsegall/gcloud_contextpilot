# Development Environment Configuration
# Local development with in-memory event bus
# Copy this to .env for local development

# Environment
ENVIRONMENT=development

# Event Bus (in-memory for local dev)
EVENT_BUS_MODE=in-memory

# Database (local files for dev)
FIRESTORE_ENABLED=false

# GCP Project (not needed for local dev)
GCP_PROJECT_ID=

# API Keys (set your own for local testing)
GEMINI_API_KEY=

# GitHub Integration (for Dev Agent and GitHub Actions)
# Format: owner/repo (e.g., fsegall/google-context-pilot)
# REQUIRED if using Dev Agent sandbox mode or approving proposals
GITHUB_REPO=
GITHUB_TOKEN=
PERSONAL_GITHUB_TOKEN=

SANDBOX_ENABLED=false

CODESPACES_ENABLED=false

CONTEXTPILOT_AUTO_APPROVE_PROPOSALS=false

# Server
HOST=0.0.0.0
PORT=8000

# Logging
LOG_LEVEL=DEBUG

# Workspace paths (local)
WORKSPACE_PATH=./.contextpilot/workspaces

# Default workspace ID for local dev
DEFAULT_WORKSPACE_ID=default




